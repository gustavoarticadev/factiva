<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="mensaje_emergente_view" model="ir.ui.view">
        <field name="name">mensaje.emergente.view</field>
        <field name="model">mensaje.emergente</field>
        <field name="arch" type="xml">
            <form string="Mensaje">
                <group>
                    <field name="tipo" />
                    <field name="mensaje" />
                    <field name="mensaje_detallado" />
                </group>
                <footer>
                    <button string="Cerrar" class="oe_highlight" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>